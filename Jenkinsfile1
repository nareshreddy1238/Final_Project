pipeline {
    agent any

    stages {
        stage('validate') {
            steps {
                echo 'validate..'
                sh 'mvn compile'
            }
        }

        stage('Build') {
            steps {
                echo 'Building'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Unit Testing'
                sh 'mvn test'
            }
        post {
         always {
           junit '**/target/surefire-reports/*.xml'
               }
             }
           }
        
        stage('Code Covarage') {
             steps {
                 echo 'Code Covarage'
                 sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
         post {
           always{
             cobertura coberturaReportFile: '**/target/site/cobertura/coverage.xml'
            } 
          }
        }
         
        stage('Deploy'){
              steps {
                   echo 'Deploy to Tomcat'
                   sh 'mvn clean install'
                  }
          post {
            always{
                  deploy adapters: [
                        tomcat7(credentialsId: 'TC', 
                        path: '', 
                        url: 'http://3.83.243.92:9090/')
                       ], 
                       contextPath: 'Calculator', 
                       onFailure: false, 
                       war: 'target/**.war'
                }
        }
     }
              
   }
 }
    
